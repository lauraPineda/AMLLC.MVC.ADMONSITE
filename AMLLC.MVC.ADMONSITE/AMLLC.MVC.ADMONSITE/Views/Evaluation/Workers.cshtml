@model AMLLC.MVC.ADMONSITE.Models.WorkersEvalutation

@{
    ViewBag.Title = "Workers";
    Layout = "~/Views/Shared/_HeadBodyFoot.cshtml";
    ViewBag.HttpMethod = "GET";
    ViewBag.Action = "New";
    ViewBag.HeadIcon = "fa-check-square-o";
    ViewBag.HeadTitle = "EVALUATION";
}

<div class="pre-scrollable scroll_x_none">
    @foreach (var item in Model.UserList)
    {
        <div id="Item-@item.IdUser" class="bg-white row margin-TB-2 cursor-pointer">
            <div class="bg-brand text-white col-xs-3"><center><i class="fa fa-user fa-3x"></i></center></div>
            <div><label>&emsp;@item.UserName</label></div>
        </div>
    }
</div>

<script>
    $(document).ready(function () {
        $(".cursor-pointer").on("click", function () {
            $("form").submit();
        });
    });
</script>
