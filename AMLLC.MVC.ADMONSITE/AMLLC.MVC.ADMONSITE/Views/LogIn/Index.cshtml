@using System.Web.Optimization;
@model AMLLC.MVC.ADMONSITE.Models.LogIn

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Acero Masonry LLC</title>
    @Styles.Render("~/bundles/LogIn/Css")

 </head>
<body>
    <div class="contenedor">
        <form method="POST">
            <div id="spaceBetween">
                <label class="AceroMansonryText">ACERO MASONRY LLC</label>
            </div>
            <div id="spaceBetween">
                <img src="~/Content/Images/AM200x74.png" class="logo" />
            </div>
            <div id="spaceBetween">
                <div class="input-group margin-bottom-sm">
                    <span class="input-group-addon"><i class="fa fa-user fa-2x"></i></span>
                    @Html.TextBoxFor(m => m.sUser, new { @class = "form-control input-lg", placeholder = HttpUtility.HtmlDecode(Html.DisplayNameFor(n => n.sUser).ToHtmlString()) })
                </div>
            </div>
            <div id="spaceBetween">
                <div class="input-group margin-bottom-sm">
                    <span class="input-group-addon"><i class="fa fa-key fa-2x"></i></span>
                    @Html.TextBoxFor(m => m.sPassword, new { @class = "form-control input-lg", placeholder = HttpUtility.HtmlDecode(Html.DisplayNameFor(n => n.sPassword).ToHtmlString()) })
                </div>
            </div>
            <div id="spaceBetween">
                <button type="submit" class="btn btn-primary btn-block btn-lg">
                   <i class="fa fa-sign-in fa-lg"></i> 
                    @AMLLC.MVC.ADMONSITE.App_GlobalResources.Strings.Login 
                </button>
                </div>
        </form>
    </div>
</body>
</html>
